{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Scythe Ops",
  "version": "0.1.34",
  "identifier": "com.scythe.assettracker",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Scythe Ops - Dev Team Management",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://*.supabase.co wss://*.supabase.co https://api.github.com https://github.com https://*.githubusercontent.com; img-src 'self' data: https:; style-src 'self' 'unsafe-inline'; font-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDRBM0QzREM2ODhDNTVDQjMKUldTelhNV0l4ajA5U2tyTWRFNkdPOTB0Yk5tRFU1ODNpbTRKS0o0MjlTa2dWLzI3U3hOQ2RCcm4K",
      "endpoints": [
        "https://github.com/Kalfadda/scythe-ops/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  },
  "mainBinaryName": "scytheops"
}
